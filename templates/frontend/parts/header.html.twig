<header class="w-full bg-white" data-controller="toggle-menu">
    <div class="border-b w-full">
        <div class="flex justify-between items-center max-w-screen-xl mx-auto py-6 px-8 lg:px-4">
            <h1 class="text-2xl font-bold"><a href="{{ path(enum('App\\Enum\\RoutesEnum').app_frontend_homepage.name) }}">{{ project_title }}</a></h1>
            <div class="hidden lg:flex items-center space-x-6">
                <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_illustrations.name) }}" class="hover:underline{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_project_illustrations.name %} underline font-bold{% endif %}">{{ 'Illustrations' | trans }}</a>
                <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_workshops.name) }}" class="hover:underline{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_project_workshops.name %} underline font-bold{% endif %}">{{ 'Workshops' | trans }}</a>
                <a href="#" class="hover:underline">{{ 'About' | trans }}</a>
                <a href="#" class="hover:underline">{{ 'Contact' | trans }}</a>
                <a href="https://www.instagram.com/miguel.bustos/" target="_blank" class="text-2xl w-6">
                    {{ ux_icon('bi:instagram') }}
                </a>
                <div class="flex items-center space-x-1 text-sm font-semibold">
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': constant('App\\Enum\\LocaleEnum::en')})) }}" class="hover:underline">EN</a>
                    <span>·</span>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': constant('App\\Enum\\LocaleEnum::ca')})) }}" class="hover:underline">CAT</a>
                    <span>·</span>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': constant('App\\Enum\\LocaleEnum::es')})) }}" class="hover:underline text-gray-400">ES</a>
                </div>
            </div>
            <div class="lg:hidden flex items-center">
                <a href="https://www.instagram.com/miguel.bustos/" target="_blank" class="text-2xl w-6 me-6">
                    {{ ux_icon('bi:instagram') }}
                </a>
                <button type="button" class="text-3xl w-16 p-3" data-action="click->toggle-menu#toggle">
                    <span data-toggle-menu-target="iconList">{{ ux_icon('bi:list') }}</span>
                    <span class="hidden" data-toggle-menu-target="iconX">{{ ux_icon('bi:x') }}</span>
                </button>
            </div>
        </div>
    </div>
    {% include 'frontend/parts/mobile_menu.html.twig' %}
</header>
