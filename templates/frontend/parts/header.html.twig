<header class="w-full bg-white sticky top-0 z-50" {{ stimulus_controller('toggle-menu') }}>
    <div class="border-b w-full">
        <div class="flex justify-between items-center max-w-screen-xl mx-auto lg:py-4 px-5 lg:px-4">
            <h1 class="text-2xl font-bold"><a href="{{ path(enum('App\\Enum\\RoutesEnum').app_frontend_homepage.name) }}">{{ project_title }}</a></h1>
            <div class="hidden lg:flex items-center space-x-6">
                <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_illustrations.name) }}" class="hover:underline{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_project_illustrations.name %} font-bold{% endif %}">{{ 'Illustrations' | trans }}</a>
                <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_workshops.name) }}" class="hover:underline{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_project_workshops.name %} font-bold{% endif %}">{{ 'Workshops' | trans }}</a>
                <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_about_me.name) }}" class="hover:underline{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_about_me.name %} font-bold{% endif %}">{{ 'About' | trans }}</a>
                <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_contact.name) }}" class="hover:underline{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_contact.name %} font-bold{% endif %}">{{ 'Contact' | trans }}</a>
                <a href="https://www.instagram.com/miguel.bustos/" target="_blank" class="text-2xl w-6 mx-6">
                    {{ ux_icon('bi:instagram') }}
                </a>
                <div class="flex items-center space-x-1 text-sm font-semibold text-gray-600">
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': constant('App\\Enum\\LocaleEnum::en')})) }}" class="hover:underline{% if app.request.locale == constant('App\\Enum\\LocaleEnum::en') %} text-black{% endif %}">EN</a>
                    <span>·</span>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': constant('App\\Enum\\LocaleEnum::ca')})) }}" class="hover:underline{% if app.request.locale == constant('App\\Enum\\LocaleEnum::ca') %} text-black{% endif %}">CAT</a>
                    <span>·</span>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': constant('App\\Enum\\LocaleEnum::es')})) }}" class="hover:underline{% if app.request.locale == constant('App\\Enum\\LocaleEnum::es') %} text-black{% endif %}">ES</a>
                </div>
            </div>
            <div class="lg:hidden flex items-center block text-center">
                <a href="https://www.instagram.com/miguel.bustos/" target="_blank">
                    {{ ux_icon('bi:instagram', { 'class': 'p-4 w-16 h-16' }) }}
                </a>
                <button type="button" class="text-3xl w-16 p-3" {{ stimulus_action('toggle-menu', 'toggle') }}>
                    <span {{ stimulus_target('toggle-menu', 'iconList') }}>{{ ux_icon('bi:list') }}</span>
                    <span class="hidden" {{ stimulus_target('toggle-menu', 'iconX') }}>{{ ux_icon('bi:x') }}</span>
                </button>
            </div>
        </div>
    </div>
    {% include 'frontend/parts/mobile_menu.html.twig' %}
</header>
