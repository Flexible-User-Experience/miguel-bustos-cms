<div class="{% if project is defined %}columns-2{% else %} columns-1 {% endif %} sm:columns-3 md:columns-6 lg:columns-6 xl:columns-8 gap-2 [column-fill:_balance] space-y-4">
    {% for project in projects %}
        {% if project.mainImage is not null and project.isActive %}
            <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_detail.name, {'slug': project.slug}) }}" class="relative group block">
                <div class="relative overflow-hidden">
                    {% if project is gif_file_format %}
                        <img
                            class="w-full transition-transform duration-300 group-hover:scale-110"
                            src="{{ vich_uploader_asset(project, 'mainImageFile') }}"
                            alt="{{ project.title }}"
                        >
                    {% else %}
                        <img
                            srcset="{{ vich_uploader_asset(project, 'mainImageFile') | imagine_filter('w_360') }} 360w,
                                {{ vich_uploader_asset(project, 'mainImageFile') | imagine_filter('w_576') }} 576w,
                                {{ vich_uploader_asset(project, 'mainImageFile') | imagine_filter('w_720') }} 720w"
                            sizes="(min-width: 1200px) 800px,
                                (min-width: 992px) 650px,
                                (min-width: 768px) 500px,
                                90vw"
                            class="w-full transition-transform duration-300 group-hover:scale-110"
                            src="{{ vich_uploader_asset(project, 'mainImageFile') | imagine_filter('w_576') }}"
                            alt="{{ project.title }}"
                        >
                    {% endif %}
                    <div class="absolute inset-0 bg-white bg-opacity-50 flex opacity-0 transition-opacity duration-300 group-hover:opacity-80">
                        <h2 class="text-black text-md md:text-md font-bold p-4">{{ project.title }}</h2>
                    </div>
                </div>
            </a>
        {% endif %}
    {% endfor %}
</div>
