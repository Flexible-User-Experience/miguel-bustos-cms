<div class="lg:hidden absolute hidden flex flex-col items-center text-3xl py-8 bg-white/75 overflow-hidden gap-y-4 z-10 w-full h-screen" {{ stimulus_target('toggle-menu', 'menu') }}>
    <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_illustrations.name) }}" class="hover:underline p-2{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_project_illustrations.name %} font-bold{% endif %}">{{ 'Illustrations' | trans }}</a>
    <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_project_workshops.name) }}" class="hover:underline p-2{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_project_workshops.name %} font-bold{% endif %}">{{ 'Workshops' | trans }}</a>
    <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_about_me.name) }}" class="hover:underline p-2{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_about_me.name %} font-bold{% endif %}">{{ 'About' | trans }}</a>
    <a href="{{ path(enum('App\\Enum\\RoutesEnum').app_contact.name) }}" class="hover:underline p-2{% if app.current_route == enum('App\\Enum\\RoutesEnum').app_contact.name %} font-bold{% endif %}">{{ 'Contact' | trans }}</a>
    <hr class="border-b border border-black-500 w-64">
