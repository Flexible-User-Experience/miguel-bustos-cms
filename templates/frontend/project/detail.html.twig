{% extends 'frontend/base.html.twig' %}

{% block title %}{{ project.title }} Â· {{ parent() }}{% endblock %}

{% block main %}
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-4 p-4 max-w-screen-xl mx-auto">
        <div>
            <h2 class="text-xl font-bold">{{ project.title }}</h2>
            <h3 class="mt-3 italic font-light">{{ project.subtitle }}</h3>
            <p class="mt-3">{{ project.description|raw }}</p>
        </div>

        <div class="col-span-2 grid gap-y-4">
            <img src="{{ vich_uploader_asset(project, 'mainImageFile') }}" alt="{{ project.title }}" />
            {% if project_images %}
                {% for image in project_images %}
                    <img src="{{ vich_uploader_asset(image, 'mainImageFile') }}" alt="hola!" />
                {% endfor %}
            {% endif %}
        </div>
    </div>
    {% include 'frontend/parts/projects_grid.html.twig' %}
{% endblock %}
