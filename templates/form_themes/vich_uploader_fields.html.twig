{%- block vich_file_row -%}
    {%- set force_error = true -%}
    {{- block('form_row') -}}
{%- endblock -%}

{%- block vich_file_widget -%}
    <div class="vich-file">
        {{- form_widget(form.file) -}}
        {%- if download_uri -%}
            {% if download_label == 'audio' %}
                <audio style="width:100%" controls>
                    <source src="{{ download_uri }}" type="audio/mpeg" />
                    <source src="{{ download_uri }}" type="audio/wav" />
                </audio>
            {% endif %}
            {% if download_label == 'video' %}
                <video style="width:100%" controls>
                    <source src="{{ download_uri }}" type="video/mp4" />
                    <source src="{{ download_uri }}" type="video/webm" />
                    <source src="{{ download_uri }}" type="video/ogg" />
                </video>
            {% endif %}
            <a class="btn btn-warning btn-xs" href="{{ asset_helper is same as(true) ? asset(download_uri) : download_uri }}" download>
                <i class="fa fa-cloud-download fa-fw"></i> {{ 'Download' | trans }}
            </a>
        {%- endif -%}
        {%- if form.delete is defined -%}
            {{- form_row(form.delete) -}}
        {%- endif -%}
    </div>
{%- endblock -%}

